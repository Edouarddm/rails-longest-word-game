<h1>Nouvelle Partie</h1>
<ul class="list-group list-group-horizontal overwrite">
  <% @letters.each do |letter| %>
    <li class="list-group-item"><%= letter.capitalize %></li>
  <% end %>
</ul>
<label for="" style="ml-20">Quel est le mot le plus long que tu peux trouver?"</label>
 <form action="/score" data-turbo="false" method="post" class="form">
  <input type="text" name="attempt">
  <input type="submit" value="Jouer!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
